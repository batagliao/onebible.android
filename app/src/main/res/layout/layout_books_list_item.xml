<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_book_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SelectBooksActivity"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:id="@+id/item_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- TODO: bind color -->

        <LinearLayout
            android:id="@+id/item_book_frame"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_width="100dp"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/item_bookAbbrev"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="28sp"
                tools:text="Gen"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="18sp"
                tools:text="Genesis" />

            <TextView
                android:id="@+id/item_ChapterQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                tools:text="55 capÃ­tulos"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>