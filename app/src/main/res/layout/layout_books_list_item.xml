<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SelectBooksActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="8dp"
    app:cardElevation="8dp"
    >

    <LinearLayout
        android:id="@+id/item_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <!-- TODO: bind color -->

        <LinearLayout
            android:id="@+id/item_book_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dddddd"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/item_bookAbbrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                tools:text="Gen" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_bookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            tools:text="Genesis" />

        <TextView
            android:id="@+id/item_ChapterQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            tools:text="55 capÃ­tulos"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>