<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/item_book_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SelectBooksActivity"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/item_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/item_book_frame"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:layout_width="70dp"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/item_bookAbbrev"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="Gen"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="6dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="18sp"
                tools:text="Genesis" />

            <TextView
                android:id="@+id/item_ChapterQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                tools:text="55 capÃ­tulos"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>